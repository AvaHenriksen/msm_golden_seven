<h1>All Actors</h1>

<a href="http://localhost:3000/actors/new_form">Add a new actor</a>
<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
    <th>Image</th>
    <th>Actions</th>
  </tr>
<% @list_of_actors.each do |actor| %>
  <tr>
    <td><%= actor.name %></td>
    <td><%= actor.bio%></td>
    <td><%= actor.dob %></td>
    <td><img src ="<%= actor.image_url %>"></td>
    <td><a href="actors/<%=actor.id%>">View</a>, <a href="/actors/<%=actor.id%>/edit">Edit</a>, <a href="/delete_actor/<%=actor.id%>">Delete</a> </td>
  </tr>
  <% end %>
</table>
